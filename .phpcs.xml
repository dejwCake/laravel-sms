<?xml version="1.0"?>
<ruleset name="Laravel Sms">
    <description>Coding standard for Laravel SMS integration.</description>

    <arg value="nsp" />
    <arg name="cache" value=".phpcs.cache" />

    <config name="php_version" value="80400" />

    <file>config/</file>
    <file>src/</file>
    <file>tests/</file>

    <!--not exactly nice, but working solution-->
    <rule ref="/root/.composer/vendor/dejwcake/php-code-style/base.phpcs.xml" />

    <rule ref="SlevomatCodingStandard.Files.TypeNameMatchesFileName">
        <properties>
            <property name="rootNamespaces" type="array">
                <element key="src" value="DejwCake\LaravelSms"/>
                <element key="tests" value="DejwCake\LaravelSms\Tests"/>
            </property>
        </properties>
    </rule>
</ruleset>
